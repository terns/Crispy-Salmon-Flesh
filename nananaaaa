public class SpiderSong{
    public static void swallowed(String animal) {
        System.out.println("There was an old lady who swallowed a " + animal +"");
        }
    public static void tocatch(String animal1, String animal2) {
        System.out.println("She swallowed the " + animal1 +" to catch the " + animal2);
        }
    public static void fly(){
        swallowed("fly");
        System.out.println("I dont know why she swallowed a fly,");
        System.out.println("Perhaps she'll die \n");
    }
    public static void spider(){
        swallowed("spider");
        System.out.println("That wriggled and iggled and jiggled inside her.");
        tocatch("spider", "fly");
        fly();
    }
    public static void bird(){
        swallowed("bird");
        System.out.println("How absurd to swallow a bird.");
        tocatch("bird", "spider");
        tocatch("spider", "fly");
        fly();
    }
    public static void cat(){
        swallowed("cat");
        System.out.println("Imagine that to swallow a cat.");
        tocatch("cat", "bird");
        tocatch("bird", "spider");
        tocatch("spider", "fly");
        fly();
    }
    public static void dog(){
        swallowed("dog");
        System.out.println("What a hog to swallow a dog.");
        tocatch("dog", "cat");
        tocatch("cat", "bird");
        tocatch("bird", "spider");
        tocatch("spider", "fly");
        fly();
    }
    public static void cow(){
        swallowed("cow");
        System.out.println("I don't know how she swallowed a cow.");
        tocatch("cow", "dog");
        tocatch("dog", "cat");
        tocatch("cat", "bird");
        tocatch("bird", "spider");
        tocatch("spider", "fly");
        fly();
    }
    public static void horse(){
        System.out.println("There was an old woman who swallowed a horse,");
        System.out.println("She died of course.");
    }
    public static void main (String[]args){
            fly();
            spider();
            bird();
            cat();
            dog();
            cow();
            horse();
    }
    }
    
